{
    "compilerOptions": {
      "target": "es5",                          // Define a versão do ECMAScript de saída
      "module": "commonjs",                     // Define o sistema de módulos a ser utilizado
      "strict": true,                           // Ativa todas as verificações de tipo estritas
      "esModuleInterop": true,                  // Habilita a interoperabilidade com módulos ES
      "forceConsistentCasingInFileNames": true, // Impede diferenças de maiúsculas/minúsculas nos nomes dos arquivos
      "skipLibCheck": true,                     // Ignora a verificação de tipo de arquivos de declaração
      "outDir": "./dist/l2",                       // Define o diretório de saída para os arquivos compilados
      "rootDir": "./l2",                       // Define o diretório raiz dos arquivos de entrada
      "sourceMap": true                         // Gera arquivos de mapeamento de origem (.map)
    },
    "include": [
      "l2/**/*"                                // Inclui todos os arquivos TypeScript no diretório l2
    ],
    "exclude": [
      "node_modules",                           // Exclui a pasta node_modules
      "**/*.spec.ts"                            // Exclui arquivos de teste
    ]
  }